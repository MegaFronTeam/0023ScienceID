mixin upload-field(title='Прикрепить файл', btn='Выбрать файл', text)
	+b.upload-field
		+e.title.form-wrap__input-title!=title
		+e.wrap
			+e.input-wrap
				+e.LABEL.btn.btn.btn-outline-primary
					input.input-upload(type='file' name='file')
					span!= btn
			+e.file-name!= text