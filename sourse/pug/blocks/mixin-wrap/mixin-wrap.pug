mixin search(placeholder="Начните вводить")
	+b.search-block
		form
			input(type="text" placeholder=placeholder)
			button 
				+icon("search")
			+e.delete-text
				+icon('close')

mixin page-head(t, calendar, switcher, morecontrol, ...items)
	+b.page-head
		- let l = items.length
		.container
			+breadcrumb('Главная',...items)
			if t
				+e.row.row
					.col
						h1.h2= t
					if calendar
						.col-auto
							+e.calendar(href='#')
								+icon('calendar')
								| Мой календарь
					if switcher
						.col-auto
							+e.show-type
								+e.icon-wrap.active
									+icon('list')
								+e.icon-wrap
									+icon('dots')
			if morecontrol
				+e.morecontrol-row.row
					.col
						+input('Выберите регион', 'select')
					.col-auto
						+e.show-type
							+e.icon-wrap.active
								+icon('list')
							+e.icon-wrap
								+icon('dots')


mixin logo(img=true)
	+b.logo(href="#")
		+img('img/svg/logo-text.svg').text
		if img
			+img('img/logo-img.png').img

mixin sliderItem(img, title, date, pin='true', city, customClass, online="Online", text, ...tags)
	+b.news-item(class= customClass)&attributes(attributes)
		+e.img-wrap(href="#")
			+img(`img/${img}`, 'bg')
		+e.content
			if (tags.length != 0 && (online!="Online" || online!= "Offline"))
				+e.tags-row.row
					if online == 'Online'
						.col-auto
							+e.online(href="#")
								span
								!= online
					if online == 'Offline'
						.col-auto
							+e.online--2(href="#")
								span
								!= online
					each tag in tags
						.col-auto
							+e.tag(href="#")!= tag
			a.h5(href="#")!= title
			if text
				+e.text!= text
			if date || city
				+e.bottom-row.row
					if date
						.col-auto
							+e.date!= date
					.col-auto
						+e.city
							if pin
								+img('img/svg/pin.svg')
							!= city

mixin vacanciesItem(label, price, title, text, customClass='swiper-slide')
	+b.vacancies-item(class= customClass)
		+e.head-row.row
			.col
				+e.label!= label
			if price
				.col-auto
					+e.price!= price
		a(href="#").h5!= title
		+e.bottom-row.row
			.col-auto
				+e.text Science-ID
			.col-auto
				+e.text!= text

mixin labSlide(img, title, text, detailed, customClass='swiper-slide')
	+b.labSlide(class= customClass)
		+e.img-wrap(href="#")
			.img-wrap-center
				+img(`img/${img}`)
		+e.content
			a(href="#").h6!= title
			+e.row.row
				.col-auto
					span.active Ритм
				.col-auto
					span Новокузнецк
			p
				!= text
				if detailed
					span.dots ...
					span.detailed Подробнее 
					span.moreText Преобразователь напряжение-ток Я9-44 обеспечивает преобразование постоянного и&nbsp;переменного напряжения
			+e.tags.row
				+e.tag-col.col-auto
					+e.tag(href="#") Оборудование
				+e.tag-col.col-auto
					+e.tag(href="#") Электроника
				+e.tag-col.col-auto
					+e.tag(href="#") Оборудование
				+e.tag-col.col-auto
					+e.tag(href="#") Электроника
				+e.tag-col.col-auto
					+e.tag(href="#") Оборудование
				.col-auto
					+e.show-more Еще 3

mixin filter(filter="Фильтр")
	+b.filter
		+e.head.btn.btn-primary!= filter
		+e.body
			+e.cross
			block

mixin logoSlide(img)
	+b.logoSlide.swiper-slide
		+e.img-wrap
			.img-wrap-center
				+img(`img/${img}`)

mixin banner(title, text, subtext, bg)
	+b.banner&attributes(attributes)
		h1.h2!= title
		p!= text
		+e.link
			+img('img/logo-img.png')
			+e.text!= subtext
				a(href="#")  Десятилетия науки и технологий
		if bg
			+img('img/sBanners-img-2.png').bg
			img(src='img/sBanners-img-5.png' alt='').img.img--2
		else
			+img('img/banner-img-1.png').img

mixin callBack(title, subtext, customClass, isUploadField)
	+b.call-back
		+b.section-title
			h4!= title
			if subtext
				p!= subtext
		+form-wrap
			+e.row.row
				div(class=customClass)
					+input('Text', 'text', `Ваше ФИО`, 'text', true)(required)
				div(class=customClass)
					+input('Text', 'email', 'E-mail', 'email', true)(required)
				.col-12
					+input('Text', 'textarea', 'Ваш вопрос', 'textarea', true)(required)
				if isUploadField
					.col-12
						+upload-field('Прикрепить файл')
			+e.btn.btn.btn-primary(type='submit') Отправить
			+policy

mixin writeUsBanner(container='container')
	+b.writeUsBanner
		if(container)
			.container
				+e.slider--js.swiper
					.swiper-wrapper 
						- for (var x = 1; x < 3; x++)
							+e.slide.swiper-slide
								picture 
									source(media="(min-width: 768px)", srcset=`img/banner-bg-${x}-lg.jpg`)
									+img(`img/banner-bg-${x}-sm.jpg`).img
								.row
									.col-md
										.h2 Нужен реактив,<br>а&nbsp;его у&nbsp;нас не&nbsp;делают?
										p Давайте проверим. Пишите, и мы поможем найти партнеров
									.col-md-auto
										+e.img-wrap
											+img('img/logo-3.png')
											+img('img/logo-4.png')
					+e.control-wrap
						+e.btn.btn.btn-primary(href="#") Написать нам
						+arrow
						.swiper-pagination
		else
			+e.slider--js.swiper
				.swiper-wrapper
					-for(let i = 0; i < 4; i++)
						+e.slide.swiper-slide
							+img('img/banner-bg-2.png').img
							.row
								.col-md
									.h2 Нужен реактив,<br>а&nbsp;его у&nbsp;нас не&nbsp;делают?
									p Давайте проверим. Пишите, и мы поможем найти партнеров
								.col-md-auto
									+e.img-wrap
										+img('img/logo-3.png')
										+img('img/logo-4.png')
				+e.control-wrap
					+e.btn.btn.btn-primary(href="#") Написать нам
					+arrow
					.swiper-pagination

